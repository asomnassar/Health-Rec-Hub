{
  "compilerOptions": {
    "target": "ESNext",                                  
    "module": "CommonJS",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "./src",
    "sourceMap": true,
    "moduleResolution":"Node"                               
  },
  "include": ["src/**/*"]
}
